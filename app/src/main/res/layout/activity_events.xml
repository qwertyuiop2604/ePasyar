<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Events"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start">

    <!-- Main content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/dashlogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/menu"
                android:layout_marginTop="10dp" />


            <!-- Logo TextViews -->
            <TextView
                android:id="@+id/e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biorhyme_extrabold"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="e"
                android:textColor="@color/appblue"
                android:textSize="35sp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/pasyar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biorhyme_extrabold"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="4"
                android:text="Pasyar"
                android:textColor="@color/blue1"
                android:textSize="40sp" />

            <ImageButton
                android:id="@+id/top_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/search1"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"

                />

            <ImageButton
                android:id="@+id/notif"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/notif"

                />


        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashlogo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/biorhyme_extrabold"
        android:text="Upcoming Events"
        android:textSize="22sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_viewEvents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/dashlogo"
            android:layout_marginTop="50dp"/>

   <include layout="@layout/icons"/>

    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/dash_menu" />

    <!-- Transparent view for interaction -->
    <View
        android:id="@+id/transparent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />


</androidx.drawerlayout.widget.DrawerLayout>