<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appblue"
    tools:context=".ChangePass">
    <LinearLayout
        android:id="@+id/changepasslogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginStart="40dp">


        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/biorhyme_extrabold"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="10"
            android:text="e"
            android:textColor="@color/yellow1"
            android:textSize="30sp">
        </TextView>

        <TextView
            android:id="@+id/pasyar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/biorhyme_extrabold"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="10"
            android:text="Pasyar"
            android:textColor="@color/yellow2"
            android:textSize="30sp">

        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/txtforgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/changepasslogo"
        android:fontFamily="@font/biorhyme_extrabold"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="10"
        android:text="Enter Your New Password"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtforgot"
        android:text="Your new password must be different from previously used password "
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAlignment="center"
        android:fontFamily="@font/alata"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/txtbox_changepass"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtforgot"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded"
        android:fontFamily="@font/biorhyme_extrabold"
        android:hint="New Password"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="text"/>

    <EditText
        android:id="@+id/txtbox_confchangepass"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtbox_changepass"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded"
        android:fontFamily="@font/biorhyme_extrabold"
        android:hint="Confirm Password"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="text"/>

    <Button
        android:id="@+id/btnContNewPass"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtbox_confchangepass"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/yellow2"
        android:fontFamily="@font/alata"
        android:padding="10dp"
        android:text="Continue"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="30dp" />



</RelativeLayout>