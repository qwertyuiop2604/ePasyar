<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <LinearLayout
        android:id="@+id/dashlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-1dp">


        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/biorhyme_extrabold"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="e"
            android:textColor="@color/appblue"
            android:textSize="35sp"/>


        <TextView
            android:id="@+id/pasyar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/biorhyme_extrabold"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:text="Pasyar"
            android:textColor="@color/blue1"
            android:textSize="40sp"/>


    </LinearLayout>


    <ImageButton
        android:id="@+id/menu"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:layout_marginTop="10dp"
        />


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Account Details"
       android:layout_below="@id/dashlogo"
       android:layout_centerHorizontal="true"
       android:textSize="30sp"
       android:fontFamily="@font/alata"
       android:layout_marginTop="10dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userPic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        app:cardCornerRadius="40dp"


        />


    <ImageButton
        android:id="@+id/btn_addPic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/userPic"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-29dp"
        android:layout_marginEnd="136dp"
        android:background="@drawable/addphoto" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userPic"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="28sp"
            android:fontFamily="@font/biorhyme"/>


        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="______"
            android:fontFamily="@font/alata"
            android:textSize="24sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textSize="28sp"
            android:fontFamily="@font/biorhyme"
            android:layout_marginTop="30dp"/>



        <TextView
            android:id="@+id/profileCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="______ "
            android:fontFamily="@font/alata"
            android:textSize="24sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="28sp"
            android:fontFamily="@font/biorhyme"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="______"
            android:fontFamily="@font/alata"
            android:textSize="24sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>


</RelativeLayout>
