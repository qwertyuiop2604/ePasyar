<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/icons"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageButton
            android:id="@+id/option_home"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/home" />


        <ImageButton
            android:id="@+id/option_otop"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/news" />

        <ImageButton
            android:id="@+id/option_maps"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="118dp"
            android:background="@drawable/maps" />

        <ImageButton
            android:id="@+id/option_events"
            android:layout_marginTop="3dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/events" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qrcodebg"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:gravity="center">


        <ImageButton
            android:id="@+id/option_QR"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/qr" />


    </RelativeLayout>



</RelativeLayout>