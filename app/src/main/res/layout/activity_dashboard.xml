<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".Dashboard"
    tools:openDrawer="start">

    <!-- Main content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/dashlogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_marginStart="55dp"
            android:layout_marginTop="-1dp">

            <!-- Logo TextViews -->
            <TextView
                android:id="@+id/e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biorhyme_extrabold"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="e"
                android:textColor="@color/appblue"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/pasyar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biorhyme_extrabold"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="4"
                android:text="Pasyar"
                android:textColor="@color/blue1"
                android:textSize="40sp" />

        </LinearLayout>

        <!-- Notification Button -->
        <ImageButton
            android:id="@+id/notif"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/notif"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" />

        <!-- Menu Button -->
        <ImageButton
            android:id="@+id/menu"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/menu"
            android:layout_marginTop="10dp" />

        <!-- Welcome Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_below="@id/dashlogo">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/biorhyme_extrabold"
                android:text="Welcome to Vigan! "
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="150dp"
                android:fontFamily="@font/biorhyme_extrabold"
                android:text="Suggested for you"
                android:textSize="24sp"
                android:layout_gravity="left" />

        </LinearLayout>

        <!-- Icons -->
        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icons"
            android:layout_marginBottom="10dp"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/dash_home"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@drawable/home" />

            <ImageButton
                android:id="@+id/dash_news"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/news"
                android:layout_marginStart="25dp" />

            <ImageButton
                android:id="@+id/dash_maps"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/maps"
                android:layout_marginStart="120dp" />

            <ImageButton
                android:id="@+id/dash_calendar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/calendar"
                android:layout_marginStart="25dp" />

        </LinearLayout>

        <!-- QR Code Button -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/qrcodebg"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp"
            android:padding="14dp"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imgBtn_QR"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/qrcode" />

        </RelativeLayout>

    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/dash_menu" />

    <!-- Transparent view for interaction -->
    <View
        android:id="@+id/transparent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

</androidx.drawerlayout.widget.DrawerLayout>
