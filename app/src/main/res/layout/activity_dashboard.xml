<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Dashboard"
    android:orientation="vertical"
   >

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout"
        tools:openDrawer="start"
        android:fitsSystemWindows="true"
        android:layout_gravity="start">

    <!-- Main content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/dashlogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/menu"
                android:layout_marginTop="10dp" />


            <!-- Logo TextViews -->
            <TextView
                android:id="@+id/e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biorhyme_extrabold"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="e"
                android:textColor="@color/appblue"
                android:textSize="35sp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/pasyar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biorhyme_extrabold"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="4"
                android:text="Pasyar"
                android:textColor="@color/blue1"
                android:textSize="40sp" />

            <ImageButton
                android:id="@+id/top_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/search1"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"

                />

            <ImageButton
                android:id="@+id/notif"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/notif"

                />


        </LinearLayout>



        <!-- ScrollView for Welcome Text -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/dashlogo"
            android:layout_above="@id/icons">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/manjari_bold"
                    android:text="Welcome to Vigan! "
                    android:textSize="25sp"
                    android:textColor="@color/black"/>



                <VideoView
                    android:id="@+id/dash_video"
                    android:layout_width="350dp"
                    android:layout_height="200dp"


                    />

                <TextView
                    android:id="@+id/dash_viganDescription"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="   "
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/manjari"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/manjari_bold"
                    android:text="Suggested for you"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_gravity="left" />

            </LinearLayout>

        </ScrollView>

    <include layout="@layout/icons"/>

    </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/header"
            app:menu="@menu/dash_menu" />

        <!-- Transparent view for interaction -->
        <View
            android:id="@+id/transparent_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true" />



    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>
