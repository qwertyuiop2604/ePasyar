<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Schedule">

    <LinearLayout
        android:id="@+id/dashlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-1dp">


        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/biorhyme_extrabold"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="e"
            android:textColor="@color/appblue"
            android:textSize="35sp"/>


        <TextView
            android:id="@+id/pasyar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/biorhyme_extrabold"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:text="Pasyar"
            android:textColor="@color/blue1"
            android:textSize="40sp"/>


    </LinearLayout>

    <ImageButton
        android:id="@+id/notif"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/notif"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/addEvent"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashlogo"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/outline"
        android:fontFamily="@font/alata"
        android:hint="Title of schedule"
        android:padding="8dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/sDate_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/descr_layout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/txt_sdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:textSize="22sp"
            android:fontFamily="@font/alata"/>

        <Button
            android:id="@+id/btn_sDate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/yellow2"
            android:text="Select Date"
            app:cornerRadius="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/alata"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/descr_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/addEvent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="Description:"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/txtbox_description"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/alata"
            android:hint="(optional)"
            android:textSize="18sp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/notif_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/sDate_layout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:fontFamily="@font/alata"
            android:textSize="22sp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/notifswt"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginStart="150dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/notif_layout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="Email:"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/e_email"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:fontFamily="@font/alata"
            android:hint="sample text"
            android:textSize="18sp" />

    </LinearLayout>







    <Button
        android:id="@+id/btn_saveEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="9dp"
        android:backgroundTint="@color/yellow2"
        android:fontFamily="@font/alata"
        android:padding="10dp"
        android:text="Save"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:cornerRadius="30dp" />


</RelativeLayout>