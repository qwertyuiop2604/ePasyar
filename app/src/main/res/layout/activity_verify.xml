<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appblue"
    tools:context=".Verify">

    <LinearLayout
        android:id="@+id/verifylogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginStart="40dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/biorhyme_extrabold"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="10"
            android:text="e"
            android:textColor="@color/yellow1"
            android:textSize="30sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/biorhyme_extrabold"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="10"
            android:text="Pasyar"
            android:textColor="@color/yellow2"
            android:textSize="30sp">

        </TextView>
    </LinearLayout>


    <TextView
        android:id="@+id/txtverify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verifylogo"
        android:fontFamily="@font/biorhyme_extrabold"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="10"
        android:text="Verify Account"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtverify"
        android:text="Please enter the 4-digit verification code that was sent to your email address. This code is valid for 5 minutes "
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/alata"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/txtbox_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtverify"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded"
        android:fontFamily="@font/biorhyme_extrabold"
        android:hint="Enter code here"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtbox_code"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="If you did not receive any code."
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView

            android:id="@+id/txt_ResendFP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/alata"
            android:text="   Resend Code"
            android:textColor="@color/yellow1"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


    <Button
        android:id="@+id/btnVerify"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtbox_code"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/yellow2"
        android:fontFamily="@font/alata"
        android:padding="10dp"
        android:text="Verify"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/alata"
        android:text="If you did not sign up for this account, you can ignore the email and the account will be deleted"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="italic" />



</RelativeLayout>